@model ItemInfoViewModel
@{
    Layout = null;
}
@*<script src="~/Scripts/UploadImage.js"></script>*@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/whereClauseCopy.css" rel="stylesheet" />
<style>
    tr.for-set-perm-td th {
        padding-bottom: 0px;
        padding-top: 0px;
        background-color: rgb(184, 192, 199);
    }

    tr.for-set-perm-td td {
        padding-bottom: 0px;
        padding-top: 0px;
    }
</style>


<p class="text-center" style="font-size:larger;font-weight:600;border-bottom:solid;border-width:thin;border-color:#ccc;">UPDATE HERITAGE LINE PERMISSION</p>
<form id="set-her-permission" method="post" enctype="multipart/form-data" asp-controller="Heritage" asp-action="SetHerPermission" class="pl-3 pr-3">
    <table class="table table-bordered table-striped">
        <thead>
            <tr class=" for-set-perm-td">
            <th width="35%">Name</th>
            <th width="12%">BD</th>
            <th width="15%">Country</th>
            <th width="17%">Province</th>
            <th width="17%">City</th>
            <th width="2%">R</th>
            <th width="2%">W</th>
            </tr>
        </thead>
        @if (Model?.herItems?.Count == null || Model?.herItems?.Count == 0)
        {
            <tr><td colspan="7" class="text-center for-set-perm-td">There is not any registered Heritage Line.</td></tr>
        }
        else
        {
            <tbody>
                @for( int i=0; i < Model.herItems.Count; i++)
                {
                    <tr class=" for-set-perm-td">
                        <td>@(Model.herItems[i].LN_FN)</td>
                        <td>@("08/09/1934")</td>
                        <td>@(Model.herItems[i].country)</td>
                        <td>@(Model.herItems[i].province)</td>
                        <td>@(Model.herItems[i].city)</td>
                        <td><input type="checkbox" asp-for="@(Model.herItems[i].isOpend)" /></td>
                        <td><input type="checkbox" asp-for="@(Model.herItems[i].isEditable)" /> </td>
                    </tr>
                }
            </tbody>
        }
    </table>


    <div class="form-group text-right" style="border-top:solid;border-width:thin;border-color:#ccc;">
        <input type="submit" value="Save" class="btn btn-secondary mr-2 mt-1" />
        <button type="button" class="btn btn-secondary mr-2 mt-1" data-dismiss="modal">Close</button>
    </div>
    <div class="form-group text-center" style="color:forestgreen;">
        @*<input type="text"name="message" value=@(Model?.message ?? "")/>*@
        <span id="uploadLabel">@(Model?.message ?? "")</span>
    </div>
</form>


@*</form>*@

