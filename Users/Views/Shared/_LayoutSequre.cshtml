<!DOCTYPE html>
<html>
<head>
    <title>HARTAK</title>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    @*<link href="~/lib/fontawesome/css/fontawesome.css" rel="stylesheet" />*@
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">*@
    <link href="~/lib/fontawesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/usersStyle.css" rel="stylesheet" />
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <link href="~/lib/jquery-ui/themes/smoothness/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/sharedFunctions.js"></script>
    @*<script src="~/Scripts/pagination.js"></script>*@
    <script src="~/Scripts/pagination_A.js"></script>
    <script src="~/Scripts/users.js"></script>
    @if (IsSectionDefined("script"))
    {
        @RenderSection("script");
    }
    <style>
        .carousel-inner img {
            width: 100%;
            height: 100%;
        }

        .slide {
            height: 150px;
        }

        body-content-footer {
            width: 100%;
            height: 50px;
            position: fixed;
            z-index: 1050;
        }
    </style>
</head>
<body class="m-1 p-1">
    <div style="width:1180px; height:900px; background-color:aquamarine; position:relative;margin:auto;">
        <div style="width:1180px; height:25px; background-color:black; position:relative;float:left;">
            <a style=" position:relative; display:inline-block;float:right;color:white;" asp-action="Logout" asp-controller="Account">Sign Out</a>
        </div>
        <div style="width:1180px; height:150px; background-color:aqua; position:relative;float:left;">
            <div style="width:456px; height:150px; background-color:coral; position:relative;float:left;">
                <img src="~/Images/image4.png" />
            </div>
            <div style="width:724px; height:150px; background-color:chocolate; position:relative;float:left;">
                @*<img src="~/Images/image3.png" />*@
                <div id="demo" class="carousel slide" data-ride="carousel">

                    <!-- Indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#demo" data-slide-to="0" class="active"></li>
                        <li data-target="#demo" data-slide-to="1"></li>
                        <li data-target="#demo" data-slide-to="2"></li>
                    </ul>

                    <!-- The slideshow -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Images/image3.png" alt="Los Angeles" width="1100" height="500">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/img_1.png" alt="Chicago" width="1100" height="500">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/img_2.png" alt="New York" width="1100" height="500">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="carousel-control-prev" href="#demo" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#demo" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
            </div>
        </div>
        @RenderBody()
    </div>
    <div class="body-content-footer text-center" style="width: 100%;height: 50px;position: fixed;z-index: 5050;">
        <div id="notification-placeholder"></div>
    </div>
</body>
</html>
